[battery]
label=⠀
separator=true
interval=30
command=/usr/lib/i3blocks/battery
instance=0

[battery]
label=⠀
separator=true
interval=30
command=/usr/lib/i3blocks/battery
instance=1

[audio]
label=⠀
interval=once
command=/usr/lib/i3blocks/volume
color=#ff8700
signal=10
#min_width=⠀50%

[brightness]
label=⠀
separator=true
interval=10
command=sleep 0.2; /bin/xbacklight | cut -d. -f1
color=#AFAF87
signal=11

