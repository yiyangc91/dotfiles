# User indicator
[user-info]
label=⠀
command=echo '{"full_text": "'$(id -un)@$(hostname)'", "color": "'$(cat $HOME/.i3-user-color)'"}'
interval=600
format=json

[time]
command= date '+%d/%m/%Y %H:%M'
label=⠀
interval=10
color=#BCBCBC
